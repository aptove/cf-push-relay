meta {
  name: Register Android Device
  type: http
  seq: 3
}

post {
  url: {{base_url}}/register
  body: json
  auth: none
}

body:json {
  {
    "relay_token": "{{relay_token}}",
    "device_token": "{{device_token_android}}",
    "platform": "android",
    "bundle_id": "com.aptove.android"
  }
}

docs {
