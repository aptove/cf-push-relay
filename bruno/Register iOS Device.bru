meta {
  name: Register iOS Device
  type: http
  seq: 2
}

post {
  url: {{base_url}}/register
  body: json
  auth: none
}

body:json {
  {
    "relay_token": "{{relay_token}}",
    "device_token": "{{device_token_ios}}",
    "platform": "ios",
    "bundle_id": "com.aptove.ios"
  }
}

docs {
  Register an iOS device for push notifications.
  
